generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                    String           @id @default(cuid())
  email                 String           @unique
  name                  String?
  walletBalance         Float            @default(0.0)
  currency              String           @default("PLN")
  createdAt             DateTime         @default(now())
  updatedAt             DateTime         @updatedAt
  role                  UserRole         @default(USER)
  bankAccount           String?
  preferredPayoutMethod String?
  usdtAddress           String?
  isBanned              Boolean          @default(false)
  banReason             String?
  emailVerified         DateTime?
  image                 String?
  onboardingCompleted   Boolean          @default(false)
  predictedTraffic      String?
  referralSource        String?
  socialMediaLinks      String?
  customCpmRate         Decimal?         @db.Decimal(10, 2)
  monetizationMode      MonetizationMode @default(STANDARD)
  lifetimeEarnings      Float            @default(0.0)
  accounts              Account[]
  links                 Link[]
  notifications         Notification[]
  payouts               Payout[]
  sessions              Session[]
  rewards               UserReward[]
}

model Reward {
  id          String       @id @default(cuid())
  slug        String       @unique
  name        String
  threshold   Float
  description String?
  image       String?
  isActive    Boolean      @default(true)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  userRewards UserReward[]
}

model UserReward {
  id              String       @id @default(cuid())
  userId          String
  rewardId        String
  status          RewardStatus @default(UNLOCKED)
  shippingDetails Json?
  requestedAt     DateTime     @default(now())
  processedAt     DateTime?
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  reward          Reward       @relation(fields: [rewardId], references: [id])
  user            User         @relation(fields: [userId], references: [id])

  @@unique([userId, rewardId])
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
}

model Link {
  id               String           @id @default(cuid())
  shortCode        String           @unique
  originalUrl      String
  userId           String
  isEnabled        Boolean          @default(true)
  domain           String?
  totalVisits      Int              @default(0)
  earnings         Float            @default(0.0)
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt
  monetizationMode MonetizationMode @default(STANDARD)
  user             User             @relation(fields: [userId], references: [id])
  visits           Visit[]

  @@index([userId])
}

model Visit {
  id          String   @id @default(uuid())
  linkId      String
  ipHash      String
  userAgent   String?
  country     String?
  isMonetized Boolean  @default(false)
  createdAt   DateTime @default(now())
  city        String?
  isProxy     Boolean  @default(false)
  region      String?
  link        Link     @relation(fields: [linkId], references: [id])

  @@index([linkId])
  @@index([createdAt])
}

model Payout {
  id          String       @id @default(cuid())
  userId      String
  amount      Float
  status      PayoutStatus @default(PENDING)
  method      String
  requestedAt DateTime     @default(now())
  processedAt DateTime?
  adminNotes  String?
  user        User         @relation(fields: [userId], references: [id])
}

model Notification {
  id        String           @id @default(cuid())
  userId    String
  type      NotificationType @default(SYSTEM)
  title     String
  message   String
  isRead    Boolean          @default(false)
  data      Json?
  createdAt DateTime         @default(now())
  user      User             @relation(fields: [userId], references: [id])

  @@index([userId])
}

enum RewardStatus {
  UNLOCKED
  REQUESTED
  SHIPPED
  DELIVERED
}

enum UserRole {
  USER
  ADMIN
}

enum MonetizationMode {
  STANDARD
  PLUS
  NSFW
}

enum PayoutStatus {
  PENDING
  PROCESSED
  REJECTED
}

enum NotificationType {
  SYSTEM
  BONUS
  OFFER
  PAYOUT
}
